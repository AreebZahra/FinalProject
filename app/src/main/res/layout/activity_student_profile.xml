<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lib7"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="385dp"
        android:layout_height="39dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="27dp"
        android:layout_marginRight="10dp"
        android:text="Welcome to in search of book "
        android:textAlignment="center"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="97dp"
        android:layout_height="39dp"
        android:layout_alignLeft="@+id/textView6"
        android:layout_marginLeft="-10dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="0dp"
        android:layout_toStartOf="@+id/bookName"
        android:background="@color/black"
        android:text="Department"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="18sp" />


    <AutoCompleteTextView
        android:id="@+id/bookName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/department"
        android:layout_alignRight="@+id/textView6"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="73dp"
        android:layout_marginRight="48dp"
        android:ems="10"
        android:inputType="textAutoComplete"
        android:minHeight="48dp"
        tools:ignore="SpeakableTextPresentCheck">

        <requestFocus />
    </AutoCompleteTextView>

    <EditText
        android:id="@+id/department"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView7"
        android:layout_marginStart="26dp"
        android:layout_marginTop="-4dp"
        android:layout_toEndOf="@+id/textView7"
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColor="#FF5722"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/admin"
        android:layout_width="316dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@color/black"
        android:onClick="AddData"

        android:text="Send notification to Admin"
        android:textColor="#DF4313"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button3"
        android:layout_width="186dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/admin"
        android:layout_alignStart="@+id/admin"
        android:layout_marginStart="58dp"
        android:layout_marginTop="24dp"
        android:layout_toRightOf="@+id/textView7"
        android:background="@color/black"
        android:onClick="signOut"

        android:text="Sign Out"
        android:textColor="#D12608"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="114dp"
        android:layout_height="36dp"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="296dp"
        android:layout_marginBottom="550dp"
        android:background="@color/black"
        android:text="Search"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="18sp" />

</RelativeLayout>
